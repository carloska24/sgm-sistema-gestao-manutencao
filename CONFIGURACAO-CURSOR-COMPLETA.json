{
  "versao": "1.0.0",
  "descricao": "Configuração completa do ambiente Cursor para replicação em outros projetos",
  "data": "2025-01-04",
  
  "instrucoes": {
    "passo1": "Copie a pasta .vscode completa para o novo projeto",
    "passo2": "Ou use o script: .\\aplicar-configuracao-cursor.ps1 -DestinoProjeto 'caminho'",
    "passo3": "Abra o Cursor no novo projeto e recarregue a janela",
    "passo4": "Instale as extensões recomendadas (serão sugeridas automaticamente)"
  },
  
  "arquivos_necessarios": [
    ".vscode/settings.json",
    ".vscode/extensions.json",
    ".vscode/tasks.json"
  ],
  
  "extensoes_recomendadas": [
