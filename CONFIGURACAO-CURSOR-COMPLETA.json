  "configuracoes_principais": {
    "tema": "Default Dark+ com cores customizadas Slate",
    "fonte_editor": "Inter, Cascadia Code, Fira Code",
    "tamanho_fonte": 14,
    "tab_size": 2,
    "formatação_automatica": true,
    "auto_save": true,
    "auto_save_delay": 1000,
    "terminal": "PowerShell (Windows)",
    "prettier": {
      "singleQuote": true,
      "trailingComma": "es5",
      "tabWidth": 2,
      "semi": true,
      "printWidth": 100,
      "arrowParens": "avoid"
    }
  },
  
  "cores_tema": {
    "fundo_principal": "#0f172a",
    "painel": "#1e293b",
    "texto_principal": "#e5e7eb",
    "texto_secundario": "#94a3b8",
    "bordas": "#334155",
    "destaque": "#22c55e",
    "selecao": "#8b5cf6",
    "cursor": "#8b5cf6"
  },
  
  "notas": {
    "tasks_json": "O arquivo tasks.json contém caminhos específicos do projeto. Você precisará ajustá-los para o novo projeto.",
    "fontes": "Para melhor experiência, instale as fontes: Inter, Cascadia Code ou Fira Code",
